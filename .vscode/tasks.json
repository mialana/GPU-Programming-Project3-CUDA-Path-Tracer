{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CUDA Make Debug Build",
            "type": "shell",
            "command": "make",
            "args": ["build", "MODE=Debug"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["absolute"],
                "pattern": {
                    "regexp": "^([^\\s:]+)\\((\\d+)(?:,(\\d+))?\\): (error|warning|note|info): (.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "presentation": {
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false,
                "echo": true,
                "focus": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}
